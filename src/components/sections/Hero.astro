---
import Button from "../shared/Button.astro";
import Container from "../shared/Container.astro";
import Paragraph from "../shared/Paragraph.astro";
---

<!-- Reduced top padding to minimize vertical whitespace -->
<section class="relative pt-20 lg:pt-24 bg-[rgb(var(--color-bg))] text-[rgb(var(--heading-1))]">
  <!-- Reduced vertical gap between text and potential image/content columns -->
  <Container className={"flex flex-col lg:flex-row gap-6 lg:gap-8"}>

    <!-- Gradient Background Blobs -->
    <div class="absolute w-full lg:w-1/2 inset-y-0 lg:right-0">
      <span class="absolute -left-6 md:left-4 top-24 lg:top-28 w-24 h-24 rotate-90 skew-x-12 rounded-3xl bg-[rgb(var(--color-teal))] blur-xl opacity-60 lg:opacity-95 hidden lg:block"></span>
      <span class="absolute right-4 bottom-12 w-24 h-24 rounded-3xl bg-[rgb(var(--color-pink))] blur-xl opacity-80"></span>
    </div>

    <!-- Large Gradient Accent -->
    <span class="w-4/12 lg:w-2/12 aspect-square bg-gradient-to-tr from-[rgb(var(--color-pink))] to-[rgb(var(--color-teal))] absolute -top-5 lg:left-0 rounded-full skew-y-12 blur-2xl opacity-40 skew-x-12 rotate-90"></span>

    <!-- Text Column -->
    <!-- Reduced vertical padding to eliminate bottom gap inside text section -->
    <div class="relative flex flex-col items-center text-center lg:text-left py-0 lg:py-2 
                lg:items-start lg:max-w-none max-w-3xl mx-auto lg:mx-0 lg:flex-1 lg:w-1/2">

      <h1 class="text-3xl sm:text-4xl md:text-5xl xl:text-6xl font-bold text-[rgb(var(--heading-1))]">
        Secure 
        <span class="text-transparent bg-clip-text bg-gradient-to-br 
          from-[rgb(var(--gradient-start))] 
          via-[rgb(var(--gradient-mid))] 
          to-[rgb(var(--gradient-end))]">
          Growth
        </span> Starts Here.
      </h1>

  
    <!-- Text and Logo Side-by-Side in 2-column Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-center mt-8 w-full max-w-4xl">
    <!-- Logo -->
    <div class="flex justify-center lg:justify-end">
        <img src="/VCGlogo.svg" alt="Vaughn Cyber Group logo" class="h-40 w-auto" />
    </div>

    <!-- Paragraph -->
    <Paragraph className="text-2xl md:text-2xl text-[rgb(var(--heading-1))]"> 
    We help startups and scaling businesses stay sharp and secure, offering fractional leadership, compliance strategy, exec training, cybersecurity education, and speaking that cut through the noise. Cyber resilience starts here.
    </Paragraph>

    
    </div>


  </Container>
  

</section>
